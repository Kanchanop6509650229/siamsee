<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/background"
    tools:context=".MainActivity"
    android:baselineAligned="false">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/siamseeStick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/siamsee_stick"
            android:layout_gravity="center"
            android:contentDescription="@string/siamsee_stick_desc" />

        <ImageView
            android:id="@+id/siamseeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/siamsee"
            android:layout_gravity="center"
            android:contentDescription="@string/siamsee_image_desc" />

    </FrameLayout>

</LinearLayout>